<Window x:Class="BodgeBuzz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BodgeBuzz"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="40" Margin="20,25, 20, 0" HorizontalAlignment="Center">This will be a question?</TextBlock>
        
        <Button Grid.Row="1" FontSize="40" Margin="20,50, 20, 0" HorizontalAlignment="Center">A. This will be option 1.</Button>
        <Button Grid.Row="2" FontSize="40" Margin="20,50, 20, 0" HorizontalAlignment="Center">B. This will be option 2.</Button>
        <Button Grid.Row="3" FontSize="40" Margin="20,50, 20, 0" HorizontalAlignment="Center">C. This will be option 3.</Button>
        <Button Grid.Row="4" FontSize="40" Margin="20,50, 20, 0" HorizontalAlignment="Center">D. This will be option 4.</Button>
    </Grid>
</Window>