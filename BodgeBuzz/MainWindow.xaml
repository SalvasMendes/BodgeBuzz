<Window x:Class="BodgeBuzz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BodgeBuzz"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" FontSize="40" Margin="20,50, 20, 0">Text0</Button>
        <Button Grid.Row="1" FontSize="40" Margin="20,50, 20, 0">Text1</Button>
        <Button Grid.Row="2" FontSize="40" Margin="20,50, 20, 0">Text2</Button>
        <Button Grid.Row="3" FontSize="40" Margin="20,50, 20, 0">Text3</Button>
    </Grid>
</Window>